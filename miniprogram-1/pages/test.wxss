/* pages/test.wxss */
.test-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center; /* 垂直居中 */
  min-height: 100vh;
  background: #f5f5f5;
  /* 新增：让内容高度居中 */
  box-sizing: border-box;
}

.info-box {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: flex-end;
  background: #fff;
  border-radius: 16px;
  box-shadow: 0 2px 8px #eee;
  padding: 10px 20px;
  margin-bottom: 20px;
  gap: 30px;
}

.info-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 0 10px;
}

.info-num {
  font-size: 22px;
  font-weight: bold;
  color: #333;
  margin-bottom: 2px;
}

.info-label {
  font-size: 14px;
  color: #888;
}

.img-center {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 220px; /* 固定图片区域高度，建议用初始最大高度 */
  margin-bottom: 30px;
  box-sizing: border-box;
  overflow: hidden;
}

.e-img-large {
  width: 66vw;
  height: 66vw;
  max-width: 400px;
  max-height: 400px;
}

.btn-box-row {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  gap: 18px;
  margin-top: 10px;
}

.btn-square {
  width: 60px;
  height: 60px;
  background: #fff;
  border-radius: 12px;
  box-shadow: 0 2px 8px #eee;
  display: flex;
  justify-content: center;
  align-items: center;
}

.square-btn {
  width: 48px;
  height: 48px;
  font-size: 18px;
  border-radius: 8px;
  background: #e0e0e0;
  color: #333;
  border: none;
  padding: 0;
}

.btn-cross-box {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center; /* 垂直居中 */
  margin-top: 10px;
  margin-bottom: 18px;
  min-height: 200px; /* 可根据实际调整高度 */
}

.cross-row {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.cross-btn-box {
  width: 60px;
  height: 60px;
  display: flex;
  justify-content: center;
  align-items: center;
}

.cross-btn {
  width: 48px;
  height: 48px;
  font-size: 18px;
  border-radius: 8px;
  background: #e0e0e0;
  color: #333;
  border: none;
  padding: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  text-align: center;
}

.cross-empty {
  width: 60px;
  height: 60px;
}

.restart-box {
  width: 240px;
  margin: 0 auto;
  margin-bottom: 10px;
  background: #1976d2;
  border-radius: 12px;
  box-shadow: 0 2px 8px #eee;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 8px 0;
}

.restart-btn {
  width: 100%;
  background: #1976d2;
  color: #fff;
  font-size: 18px;
  border: none;
  border-radius: 8px;
  padding: 10px 0;
  font-weight: bold;
}