/* pages/test.wxss */
.test-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 100vh;
  background: #f5f5f5;
}

.info-box {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: flex-end;
  background: #fff;
  border-radius: 16px;
  box-shadow: 0 2px 8px #eee;
  padding: 10px 20px;
  margin-bottom: 20px;
  gap: 30px;
}

.info-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 0 10px;
}

.info-num {
  font-size: 22px;
  font-weight: bold;
  color: #333;
  margin-bottom: 2px;
}

.info-label {
  font-size: 14px;
  color: #888;
}

.img-center {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  margin-bottom: 30px;
}

.e-img-large {
  width: 66vw;
  height: 66vw;
  max-width: 400px;
  max-height: 400px;
}

.btn-box-row {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  gap: 18px;
  margin-top: 10px;
}

.btn-square {
  width: 60px;
  height: 60px;
  background: #fff;
  border-radius: 12px;
  box-shadow: 0 2px 8px #eee;
  display: flex;
  justify-content: center;
  align-items: center;
}

.square-btn {
  width: 48px;
  height: 48px;
  font-size: 18px;
  border-radius: 8px;
  background: #e0e0e0;
  color: #333;
  border: none;
  padding: 0;
}