<!--pages/test.wxml-->
<view class="test-container" bindtouchstart="onTouchStart" bindtouchend="onTouchEnd" bindkeydown="onKeyDown">
  <view class="info-box">
    <view class="info-item">
      <text class="info-num">{{currentLevel}}</text>
      <text class="info-label">视力</text>
    </view>
    <view class="info-item">
      <text class="info-num">{{testCount}} / 5</text>
      <text class="info-label">数量</text>
    </view>
    <view class="info-item">
      <text class="info-num">{{formattedTime}}</text>
      <text class="info-label">时间</text>
    </view>
  </view>
  <view class="img-center">
    <image class="e-img-large" src="/images/e.jpg" style="transform: rotate({{rotateDeg}}deg); width:{{eImgSize}}px; height:{{eImgSize}}px;" />
  </view>
  <!-- 十字排列按钮部分 -->
  <view class="btn-cross-box">
    <view class="cross-row">
      <view class="cross-empty"></view>
      <view class="cross-btn-box"><button class="cross-btn" bindtap="onUp">上</button></view>
      <view class="cross-empty"></view>
    </view>
    <view class="cross-row">
      <view class="cross-btn-box"><button class="cross-btn" bindtap="onLeft">左</button></view>
      <view class="cross-empty"></view>
      <view class="cross-btn-box"><button class="cross-btn" bindtap="onRight">右</button></view>
    </view>
    <view class="cross-row">
      <view class="cross-empty"></view>
      <view class="cross-btn-box"><button class="cross-btn" bindtap="onDown">下</button></view>
      <view class="cross-empty"></view>
    </view>
  </view>
  <view class="restart-box">
    <button class="restart-btn" bindtap="onRestart">重新开始</button>
  </view>
</view>