/**index.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
}
.scrollarea {
  flex: 1;
  overflow-y: hidden;
}
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
  background: #f5f5f5;
}
.title {
  font-size: 28px;
  font-weight: bold;
  margin-bottom: 40px;
  color: #333;
}
.start-btn {
  width: 200px;
  height: 50px;
  font-size: 20px;
  background: #4caf50;
  color: #fff;
  border-radius: 25px;
}
